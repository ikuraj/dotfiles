	email = stanley.shyiko@gmail.com
[branch "master"]
	remote = origin
	merge = refs/heads/master
[alias]
    l = log --pretty=oneline -n 20 --graph
    s = status -s
    d = diff --patch-with-stat
    ca = !git add -A && git commit -av
    aa = add --all
    # switch to a branch, creating if necessary
    go = checkout -B
    b = branch -a
    r = remote -v
    remove-untracked-files = clean -df
    amend-author = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"
    undo-push = push -f origin HEAD^:master
    show-current-branch = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
[core]
	excludesfile = ~/.gitignore
[merge]
    # include summaries of merged commits into newly created merge commit message
    log = true
[apply]
    # ignore whitespaces when applying a patch
    whitespace = fix
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan